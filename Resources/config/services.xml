<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="jose.compression_manager" class="Jose\Compression\CompressionManager" public="false" />
        <service id="jose.payload_converter_manager" class="Jose\Payload\PayloadConverterManager" public="false" />
        <service id="jose.checker_manager" class="Jose\Checker\CheckerManager" public="false" />
        <service id="jose.factory.key" class="SpomkyLabs\JoseBundle\Factory\KeyFactory" />
        <service id="jose.factory.algorithm_manager" class="SpomkyLabs\JoseBundle\Factory\JWAFactory" />
        <service id="jose.loader" class="Jose\Loader">
            <argument type="service" id="jose.payload_converter_manager" />
        </service>
        <service id="jose.factory.signer" class="SpomkyLabs\JoseBundle\Factory\SignerFactory">
            <argument type="service" id="jose.payload_converter_manager" />
            <argument type="service" id="jose.factory.algorithm_manager" />
        </service>
        <service id="jose.factory.verifier" class="SpomkyLabs\JoseBundle\Factory\VerifierFactory">
            <argument type="service" id="jose.checker_manager" />
            <argument type="service" id="jose.factory.algorithm_manager" />
        </service>
        <service id="jose.factory.encrypter" class="SpomkyLabs\JoseBundle\Factory\EncrypterFactory">
            <argument type="service" id="jose.payload_converter_manager" />
            <argument type="service" id="jose.compression_manager" />
            <argument type="service" id="jose.factory.algorithm_manager" />
        </service>
        <service id="jose.factory.decrypter" class="SpomkyLabs\JoseBundle\Factory\DecrypterFactory">
            <argument type="service" id="jose.payload_converter_manager" />
            <argument type="service" id="jose.compression_manager" />
            <argument type="service" id="jose.checker_manager" />
            <argument type="service" id="jose.factory.algorithm_manager" />
        </service>
    </services>
</container>
